<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notif_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/green"
        android:gravity="center_vertical"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/photo_store_notif"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:src="@drawable/dummy_profpict"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/store_name_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(store name)"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                />

            <TextView
                android:id="@+id/po_name_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(PO name)"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="21sp"
                />

            <TextView
                android:id="@+id/po_price_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(PO price)"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="17sp"
                />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>