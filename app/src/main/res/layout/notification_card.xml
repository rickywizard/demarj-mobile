<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notif_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:background="@drawable/background_notification"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/photo_store_notif"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:src="@drawable/dummy_profpict"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:id="@+id/desc_notif_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/photo_store_notif"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/store_name_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(store name)"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                />

            <TextView
                android:id="@+id/po_name_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(PO name)"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="21sp"
                />

            <TextView
                android:id="@+id/po_price_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(PO price)"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"
                android:textSize="17sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/notif_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:textAlignment="textEnd"
            android:layout_marginEnd="35dp"
            android:text="24 Juni 2024 15.20"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/desc_notif_layout"
            android:textSize="10sp"
            />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>